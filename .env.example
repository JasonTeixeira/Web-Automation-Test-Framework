# Application Under Test
BASE_URL=https://www.saucedemo.com
API_BASE_URL=https://www.saucedemo.com/api

# Test Users (Sauce Demo provides these)
STANDARD_USER=standard_user
LOCKED_USER=locked_out_user
PROBLEM_USER=problem_user
PERFORMANCE_USER=performance_glitch_user
ERROR_USER=error_user
VISUAL_USER=visual_user
DEFAULT_PASSWORD=secret_sauce

# Browser Configuration
BROWSER=chromium  # chromium, firefox, webkit
HEADLESS=false
SLOW_MO=0  # Milliseconds to slow down operations (0 for normal speed)
TIMEOUT=30000  # Default timeout in milliseconds
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Test Execution
PARALLEL_WORKERS=4
RETRIES=1
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_FAILURE=true

# Reporting
ALLURE_RESULTS_DIR=reports/allure-results
HTML_REPORT_DIR=reports
SCREENSHOT_DIR=screenshots
LOG_DIR=logs
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# CI/CD Flags
CI=false
RUN_VISUAL_TESTS=true
RUN_ACCESSIBILITY_TESTS=true
RUN_PERFORMANCE_TESTS=false

# Test Data
USE_FAKER=true
LOCALE=en_US

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=
SLACK_NOTIFY_ON_FAILURE=false

# Email Notifications (Optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFY_EMAIL=
